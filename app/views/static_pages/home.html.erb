<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info', user: current_user %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>ツイート一覧</h3>
      <%= render 'shared/feed' %>
      <%= paginate @feed_items %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>twitters</h1>
    <%= link_to "今すぐアカウントを作ろう!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
