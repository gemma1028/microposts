<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image.url if micropost.image? %>
  </span>
  <span id="micropost_<%= micropost.id %>">
    <%= render 'favorites/favorite_btn', micropost: micropost %>
  </span>
  <span class="timestamp">
    投稿 <%= time_ago_in_words(micropost.created_at) %> 前
    <% if current_user == micropost.user %>
      <%= link_to "削除する", micropost, method: :delete,
                                       data: { confirm: "削除してもよろしいですか?" } %>
    <% end %>
    
  </span>
  
</li>
